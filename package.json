{
  "name": "pro-dev-qc-tool",
  "version": "1.0.0",
  "author": "Anh Bui",
  "description": "Professional Sass Compiler and QC Tool",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.anhbui.devqctool",
    "productName": "DevQCPro",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "format": "UDZO",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        { "x": 410, "y": 180, "type": "link", "path": "/Applications" },
        { "x": 130, "y": 180, "type": "file" }
      ]
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true
  },
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest"
  },
  "dependencies": {
    "sass": "^1.x",
    "chokidar": "^3.x",
    "ws": "^8.x"
  }
}